<flex-config>
	<compiler>
		<incremental>true</incremental>
		<locale>
			<locale-element>en_US</locale-element>
		</locale>
		<accessible>true</accessible>
		<debug>false</debug>
	
		<namespaces>
			<!-- compiler.namespaces.namespace: Specify a URI to associate with a manifest of components for use as MXML elements-->
			<namespace>
				<uri>http://www.nbilyk.com/2009</uri>
				<manifest>src/manifest.xml</manifest>
			</namespace>
		</namespaces>
		<optimize>true</optimize>
		<strict>true</strict>
		<source-path>
			<path-element>src</path-element>
		</source-path>
	</compiler>
	<footer><![CDATA[http://www.nbilyk.com]]></footer>
	
	<doc-classes>
		<class>NBFlexLibClasses</class>
	</doc-classes>
	<load-config>${flexlib}/${configname}-config.xml</load-config>
	
	<metadata>
		<creator>Nicholas Bilyk</creator>
		<description>A better DataGrid</description>
		<title>ElfGrid Component</title>
	</metadata>
</flex-config>